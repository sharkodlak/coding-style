<?xml version="1.0"?>
<ruleset name="Sharkodlak">
	<description>Sharkodlak's favorite coding standard.</description>
	<arg name="encoding" value="UTF-8"/>
	<arg name="report-width" value="auto"/>
	<arg name="tab-width" value="4"/>
	<rule ref="Generic">
		<exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
		<exclude name="Generic.CodeAnalysis.UnconditionalIfStatement"/>
		<exclude name="Generic.Files.EndFileNoNewline"/>
		<exclude name="Generic.Files.LowercasedFilename"/>
		<exclude name="Generic.Files.OneClassPerFile"/>
		<exclude name="Generic.Formatting.MultipleStatementAlignment"/>
		<exclude name="Generic.Functions.OpeningFunctionBraceBsdAllman"/>
		<exclude name="Generic.Functions.OpeningFunctionBraceKernighanRitchie.SpaceAfterBracket"/>
		<exclude name="Generic.NamingConventions.CamelCapsFunctionName.ScopeNotCamelCaps"/>
		<exclude name="Generic.PHP.ClosingPHPTag"/>
		<exclude name="Generic.PHP.UpperCaseConstant"/>
	</rule>
	<rule ref="PSR2">
		<exclude name="Generic.WhiteSpace.DisallowTabIndent"/>
		<exclude name="PSR2.Classes.ClassDeclaration.FirstInterfaceSameLine"/>
		<exclude name="PSR2.Classes.ClassDeclaration.OpenBraceNewLine"/>
		<exclude name="PSR2.Classes.PropertyDeclaration.Underscore"/>
		<exclude name="PSR2.ControlStructures.ElseIfDeclaration"/>
		<exclude name="Squiz.Functions.FunctionDeclaration"/>
		<exclude name="Squiz.Functions.MultiLineFunctionDeclaration.BraceOnSameLine"/>
	</rule>

	<rule ref="Generic.Arrays.DisallowLongArraySyntax.Found">
		<type>warning</type>
		<severity>3</severity>
	</rule>
	<rule ref="Generic.CodeAnalysis.UnnecessaryFinalModifier">
		<severity>3</severity>
	</rule>
	<rule ref="Generic.CodeAnalysis.UnusedFunctionParameter">
		<severity>3</severity>
	</rule>
	<rule ref="Generic.Commenting.DocComment">
		<severity>3</severity>
	</rule>
	<rule ref="Generic.Files.LineLength">
		<properties>
			<property name="lineLimit" value="132"/>
			<property name="absoluteLineLimit" value="0"/>
		</properties>
	</rule>
	<rule ref="Generic.Metrics.NestingLevel">
		<properties>
			<property name="nestingLevel" value="3"/>
			<property name="absoluteNestingLevel" value="6"/>
		</properties>
	</rule>
	<rule ref="Generic.Strings.UnnecessaryStringConcat">
		<properties>
			<property name="error" value="false"/>
		</properties>
	</rule>
	<rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>

	<rule ref="MySource.PHP.EvalObjectFactory"/>

	<rule ref="PEAR.Commenting.InlineComment"/>
	<rule ref="PEAR.Files.IncludingFile.UseIncludeOnce">
		<type>warning</type>
	</rule>
	<rule ref="PEAR.Formatting.MultiLineAssignment"/>
	<rule ref="PEAR.WhiteSpace.ObjectOperatorIndent"/>

	<rule ref="PSR1.Files.SideEffects.FoundWithSymbols">
		<type>error</type>
	</rule>

	<rule ref="Squiz.Arrays.ArrayBracketSpacing"/>
	<rule ref="Squiz.Classes.SelfMemberReference"/>
	<rule ref="Squiz.Commenting.FunctionCommentThrowTag.Missing">
		<type>warning</type>
	</rule>
	<rule ref="Squiz.PHP.DiscouragedFunctions"/>
	<rule ref="Squiz.PHP.Eval"/>
	<rule ref="Squiz.PHP.ForbiddenFunctions"/>
	<rule ref="Squiz.PHP.GlobalKeyword"/>
	<rule ref="Squiz.PHP.LowercasePHPFunctions"/>
	<rule ref="Squiz.PHP.NonExecutableCode"/>
	<rule ref="Squiz.Scope.StaticThisUsage"/>
	<rule ref="Squiz.Strings.EchoedStrings"/>
	<rule ref="Squiz.WhiteSpace">
		<exclude name="Squiz.WhiteSpace.ControlStructureSpacing.NoLineAfterClose"/>
		<exclude name="Squiz.WhiteSpace.FunctionClosingBraceSpace"/>
		<exclude name="Squiz.WhiteSpace.FunctionSpacing"/>
		<exclude name="Squiz.WhiteSpace.MemberVarSpacing"/>
		<exclude name="Squiz.WhiteSpace.ObjectOperatorSpacing.Before"/>
	</rule>

	<rule ref="Zend.Files.ClosingTag"/>
</ruleset>
